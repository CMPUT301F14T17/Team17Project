<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cafe_noir" >

    <ListView
        android:id="@+id/qaItemView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/milk" >
    </ListView>

    <Button
        android:id="@+id/createAnswer"
        style="?android:attr/buttonStyleSmall"
        android:layout_below="@id/qaItemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/compl_blue_split1"
        android:text="@string/createAnswer"
        android:textColor="@color/milk" />
	
</RelativeLayout>
